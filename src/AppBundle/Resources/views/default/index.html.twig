{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">SAASS</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            {{ 'region'|trans }} - {{ 'region'|l10n|trans }}<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            {% for region, region_name in region_list %}
                                <li>
                                    <a href="{{ path('app_default_changelocalization', {'localization': region}) }}">
                                        {{ region_name|trans }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            {{ 'language'|trans }} - {{ app.request.locale|trans }}<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            {% for locale in locale_list %}
                                <li>
                                    <a href="{{ path('app_default_changelocale', {'_locale': locale}) }}">
                                        {{ locale|trans }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a>{{ 'now'|localizeddate('medium', 'medium', app.request.locale, 'timezone'|l10n) }}</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="jumbotron">
        <div class="container">
            <h1>SAASS</h1>
            <p>{{ 'catch_phrase'|trans }}</p>
            <p><a class="btn btn-primary btn-lg" href="#" role="button">{{ 'learn_more'|trans }} »</a></p>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h2>{{ 'cheap'|trans }}</h2>
                <p>
                    {% set price = 'service.price'|l10n|localizedcurrency('currency.iso'|l10n, app.request.locale) %}
                    {{ 'service_price_is'|trans({'%price%': price})|raw }}
                </p>
                <p>{{ ('service.available'|l10n ? 'service_is_available' : 'service_is_not_available')|trans }}</p>
                <p><a class="btn btn-default" href="#" role="button">{{ 'view_details'|trans }} »</a></p>
            </div>
            <div class="col-md-4">
                <h2>{{ 'fast'|trans }}</h2>
                <p>{{ 'speed_features'|l10n|raw }}</p>
                <p><a class="btn btn-default" href="#" role="button">{{ 'view_details'|trans }} »</a></p>
            </div>
            <div class="col-md-4">
                <h2>{{ 'strong' }}</h2>
                <p>{{ 'new_features_to_support_your_business'|trans({'%seventy%': 'seventy'|trans})|raw }}</p>
                <p><a class="btn btn-default" href="#" role="button">{{ 'view_details'|trans }} »</a></p>
            </div>
        </div>
    </div>
{% endblock %}
